<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/cardView"
        >

        <RelativeLayout
            android:padding="15dp"
            android:background="@color/cardview_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgViewId"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_share"
                android:background="@drawable/image_circle_back_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/name"
                android:text="Bulbul Ahmed"
                android:layout_toRightOf="@id/imgViewId"
                android:layout_marginLeft="25dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/email"
                android:text="bulbul@gmail.com"
                android:textSize="15sp"
                android:layout_toRightOf="@id/imgViewId"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/name"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_marginTop="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>